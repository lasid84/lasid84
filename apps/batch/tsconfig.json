{
  "compilerOptions": {
    "lib": ["ES2015"],
    "module": "CommonJS",
    // "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "outDir": "./dist",
    "noImplicitAny": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "components/*": [
        "./components/*"
      ]
    }
  },
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/base.json",
  "include": ["."]
}
