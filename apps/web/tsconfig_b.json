{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es2018",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "ni18n.config.js"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
