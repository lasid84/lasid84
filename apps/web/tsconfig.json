{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": "./src"
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    ".next/types/**/*.ts",
    "ni18n.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
