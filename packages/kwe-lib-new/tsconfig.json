{
    "compilerOptions": {
      "target": "ESNext",                       
      "module": "ESNext",                       
      "moduleResolution": "node",               
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true, 
      "outDir": "./dist",                       
      "declaration": true,                      
      "declarationMap": true,
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "./src/*"
        ],
        "@": ["./src/index.ts"],
      },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  