{
  "name": "KREAM Web",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:web": "turbo build --filter=web",
    "build:api": "turbo build --filter=api",
    "build:batch": "turbo build --filter=batch",
    "heroku-postbuild": "if [ $CLIENT_ENV ]; then pnpm run prod-api; elif [ $SERVER_ENV ]; then pnpm run prod-batch; else echo no environment detected, please set CLIENT_ENV or SERVER_ENV; fi",
    "prod-api": "pnpm run build:api",
    "prod-batch": "pnpm run build:batch"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0"
}
