{
  "name": "kream_web",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "heroku-postbuild": "if [ $CLIENT_ENV ]; then pnpm run prod-api; elif [ $SERVER_ENV ]; then pnpm run prod-batch; else echo no environment detected, please set CLIENT_ENV or SERVER_ENV; fi",

    "ds:api_init" : "pm2 deploy api_staging setup",
    "ds:api" : "pm2 deploy api_staging update",
    "dp:api_init" : "pm2 deploy production setup --force",
    "dp:api" : "pm2 deploy api_prod production update",
    "dp:api_f" : "pm2 deploy api_prod update --force",

    "dp:batch_i" : "pm2 deploy production setup --force",
    "dp:batch" : "pm2 deploy api_prod update",
    "dp:batch_f" : "pm2 deploy api_prod update --force",

    "dp:web_f" : "pm2 deploy web_prod update --force"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0"
}
